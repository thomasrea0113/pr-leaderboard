@page
@model Leaderboard.Pages.Index

@{
  ViewData["Title"] = "Home Page";
  ViewData["navFadeTop"] = true;
}

@section beforeContainer {
  <div class="shadow-bottom navbar-fixed-offset card bg-success" style="max-height: 90vh; overflow: hidden; border: unset;">
      <img
          class="card-img"
          style="opacity: 0.85;"
          alt="Board"
          src="https://bloximages.chicago2.vip.townnews.com/thetandd.com/content/tncms/assets/v3/editorial/5/bc/5bc01127-ae03-52f4-b26b-923cde93f914/5afdb85c7e6c3.image.jpg"
      />
      <div class="card-img-overlay">
        <div id="image-overlay" class="center-vertical text-center"></div>
      </div>
  </div>
}

<h1>Leaderboard Home</h1>

<react-root>

</react-root>

@section scripts {
    <react-component src="js/home.[hash].js" element-id="image-overlay" props="Model.Props" />
