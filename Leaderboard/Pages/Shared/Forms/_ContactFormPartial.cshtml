@model Leaderboard.ViewModels.ContactViewModel

@{
    var id = ViewData["FormIdPrefix"];
    Boolean.TryParse(ViewData["EmailEnabled"]?.ToString(), out var emailEnabled);
}

<form id="form-@id" method="post" data-ajax-initial-url="?handler=form" data-ajax="true" data-ajax-update="#form-@id" data-ajax-url="?handler=form" data-ajax-loading="#loading-@id">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input @if(!emailEnabled){ <text>readonly</text> } asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Message"></label>
        <input asp-for="Message" class="form-control" />
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <button type="submit" value="Submit" class="btn btn-primary">
        <span style="display: none;" id="loading-@id"><i class="fas fa-circle-notch fa-spin"></i>&nbsp;</span>
        Submit
    </button>
</form>